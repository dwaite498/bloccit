<div class='row'>
  <div class='col-md-8'>
    <div class='media'>
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class='medial-left'>
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class='media-body'>
        <h2 class='media-heading'><% @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if user_has_posts? %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else %>
  <h2> <%= @user.name %> has no posts</h2>
<% end %>

<% if user_has_comments? %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
 <h2><%= @user.name %> has no comments</h2>
<% end %>

<h2>Favorites</h2>
  <% if @user.favorites %>
    <% render partial: 'favorites/userfav', locals: { favorites: @user.favorites } %>
      <%= @posts %>
  <% else %>
    <h3> <%= @user.name %> has not favorited anything yet.</h3>
  <% end %>
  </div>
</div>
